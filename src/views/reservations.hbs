<h2>Réservations de ma classe</h2>

<p>Cette page affichera les réservations associées à la classe de l'utilisateur.</p>

<table border="1" cellpadding="5">
  <thead>
    <tr>
      <th>Salle</th>
      <th>Classe</th>
      <th>Début</th>
      <th>Fin</th>
      <th>Statut</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#if reservations}}
      {{#each reservations}}
        <tr>
          <td>{{salleNom}}</td>
          <td>{{classeNom}}</td>
          <td>{{date_debut}}</td>
          <td>{{date_fin}}</td>
          <td>{{statut}}</td>
          <td>
            <!-- Actions pour Kamilia -->
            <button data-id="{{id}}" class="btn-modifier">Modifier</button>
            <button data-id="{{id}}" class="btn-annuler">Annuler</button>
          </td>
        </tr>
      {{/each}}
    {{else}}
      <tr>
        <td colspan="6">Aucune réservation pour le moment.</td>
      </tr>
    {{/if}}
  </tbody>
</table>
