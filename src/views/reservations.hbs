<h2>Réservations de classe</h2>

<form method="get" action="/reservations/ma-classe">
  <label for="classeId">ID de la classe :</label>
  <input type="number" id="classeId" name="classeId" value="{{classeId}}" />

  <span>ou</span>

  <label for="classeNom">Nom de la classe :</label>
  <input type="text" id="classeNom" name="classeNom" value="{{classeNom}}" />

  <button type="submit">Rechercher</button>
</form>

<hr>

<table border="1" cellpadding="5">
  <thead>
    <tr>
      <th>Salle</th>
      <th>Classe</th>
      <th>Début</th>
      <th>Fin</th>
      <th>Statut</th>
    </tr>
  </thead>
  <tbody>
    {{#if reservations}}
      {{#each reservations}}
        <tr>
          <td>{{salleNom}}</td>
          <td>{{classeNom}}</td>
          <td>{{date_debut}}</td>
          <td>{{date_fin}}</td>
          <td>{{statut}}</td>
        </tr>
      {{/each}}
    {{else}}
      <tr>
        <td colspan="5">Aucune réservation trouvée pour cette classe.</td>
      </tr>
    {{/if}}
  </tbody>
</table>
