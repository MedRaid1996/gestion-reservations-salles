{{!-- 
  Partial header : En-tête de l'application
  Affiche le titre, les informations de l'utilisateur connecté et le menu de navigation
  Variables attendues : user (objet utilisateur), isEnseignant (booléen)
--}}
<header class="main-header">
  <h1>Système de gestion des réservations de salles</h1>

  {{!-- Section visible uniquement si un utilisateur est connecté --}}
  {{#if user}}
    <div class="user-info">
      Connecté : <strong>{{user.nom}}</strong> ({{user.role}})
      {{!-- Formulaire de déconnexion --}}
      <form action="/logout" method="post" class="logout-form">
        <button type="submit">Se déconnecter</button>
      </form>
    </div>

    {{!-- Menu de navigation adapté selon le rôle de l'utilisateur --}}
    <nav class="main-nav">
      {{#if isEnseignant}}
        {{!-- Menu pour les enseignants --}}
        <a href="/salles">Salles</a>
        <a href="/reservations/ma-classe">Mes réservations</a>
      {{else}}
        {{!-- Menu pour les étudiants --}}
        <a href="/reservations/ma-classe">Consulter les réservations de ma classe</a>
        <a href="/salles">Liste des salles</a>
      {{/if}}
    </nav>

  {{/if}}
</header>
